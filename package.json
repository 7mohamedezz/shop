{
  "name": "plumbing-shop",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "ELECTRON_DISABLE_SANDBOX=1 electron .",
    "dev": "ELECTRON_DISABLE_SANDBOX=1 electron .",
    "build": "electron-builder",
    "seed": "node scripts/seed.js",
    "wipe:local": "node scripts/wipe.js --local --yes",
    "wipe:atlas": "node scripts/wipe.js --atlas --yes",
    "wipe:both": "node scripts/wipe.js --both --yes"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "Desktop management system for a plumbing supplies store (Electron + MongoDB/Mongoose)",
  "build": {
    "appId": "com.example.plumbingshop",
    "productName": "Plumbing Shop",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "models/**",
      "services/**",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "electron": "^37.3.0",
    "mongodb-memory-server": "^10.2.0",
    "mongoose": "^8.17.1"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12"
  }
}

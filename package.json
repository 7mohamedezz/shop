{
  "name": "plumbing-shop",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "ELECTRON_DISABLE_SANDBOX=1 electron .",
    "dev": "ELECTRON_DISABLE_SANDBOX=1 electron .",
    "build": "electron-builder",
    "dist": "electron-builder",
    "seed": "node scripts/seed.js",
    "wipe:local": "node scripts/wipe.js --local --yes",
    "wipe:atlas": "node scripts/wipe.js --atlas --yes",
    "wipe:both": "node scripts/wipe.js --both --yes"
  },
  "keywords": [],
  "author": "Mohamed Ezz",
  "email": "7mohamedezz@gmail.com",
  "license": "MIT",
  "description": "Desktop management system for a plumbing supplies store (Electron + MongoDB/Mongoose)",
  "build": {
    "appId": "com.mycompany.plumbingshop",
    "productName": "Plumbing Shop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "models/**",
      "services/**",
      "logo.png",
      "package.json"
    ],
    "linux": {
      "target": ["AppImage"],
      "category": "Office",
      "icon": "logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "logo.png"
    }
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "mongodb-memory-server": "^10.2.0",
    "mongoose": "^8.17.1"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "electron": "^37.3.0"
  }
}
